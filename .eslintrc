{
    "env": {
        "node": false,
        "es6": true
    },
    "extends": ["./node_modules/@wgwergwegwer/configs/src/eslintrc-base.js"],
    "overrides": [
        {
            "files": "src/**/*.jsx",
            "parserOptions": {
                "ecmaFeatures": {
                    "jsx": true
                }
            },
            "plugins": ["react"],
            "extends": [
                "plugin:react/recommended"
            ],
            "rules": {
                "react/prop-types": "off",
                "react/react-in-jsx-scope": "off",
                "indent": ["error", "tab"]
            }
        }
    ]
}
